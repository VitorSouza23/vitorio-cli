<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFrameworks>net8.0;net9.0</TargetFrameworks>
    <LangVersion>latest</LangVersion>

    <PackAsTool>true</PackAsTool>
    <ToolCommandName>vitorio</ToolCommandName>
    <PackageOutputPath>./nupkg</PackageOutputPath>

    <PackageId>Vitorio.CLI</PackageId>
    <Version>2.0.0</Version>
    <Authors>VitorSouza23</Authors>
    <Description>
      CLI based on useful tool for developers. All data generated and manipulated by it are the total responsibility of those who use it;
    </Description>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/VitorSouza23/vitorio-cli</PackageProjectUrl>
    <RepositoryUrl>https://github.com/VitorSouza23/vitorio-cli</RepositoryUrl>
    <RespositoryType>git</RespositoryType>
    <PackageTags>CLI</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Spectre.Console" Version="0.43.0" />
    <PackageReference Include="System.CommandLine" Version="2.0.0-beta2.21617.1" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="Resources/**" CopyToPublishDirectory="PreserveNewest">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

</Project>
